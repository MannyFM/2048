<Window x:Class="_2048.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="600">
    <Grid Name="mainGrid">
        <Button x:Name="randomButton" Content="Random" HorizontalAlignment="Left" Margin="507,109,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button x:Name="moveLeftButoon" Content="Move Left" HorizontalAlignment="Left" Margin="507,165,0,0" VerticalAlignment="Top" Width="75" Click="moveLeftButoon_Click"/>
        <Button x:Name="moveRightButton" Content="Move Right" HorizontalAlignment="Left" Margin="507,226,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="moveUpButton" Content="Move Up" HorizontalAlignment="Left" Margin="507,281,0,0" VerticalAlignment="Top" Width="75" Click="moveUpButton_Click"/>
        <Button x:Name="moveDownButton" Content="Move Down" HorizontalAlignment="Left" Margin="507,337,0,0" VerticalAlignment="Top" Width="75" Click="moveDownButton_Click"/>
        <Label x:Name="pointsLabel" Content="Pts:" HorizontalAlignment="Left" Margin="507,35,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
